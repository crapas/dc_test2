version: '3'

services:
  redis_service:
    image: redis
    container_name: redis_service
    networks:
      - infer_network

  model_service:
    build:
      context: .
      dockerfile: Dockerfile.modelservice
    depends_on:
      - redis_service
    container_name: model_service
    ports:
      - "5002:5002"
    volumes:
      - ./model:/app/model
    environment:
      MODELPATH: /app/model
      MODELFILE: modelfile
      REDISHOST: redis_service
      # 추가
      MODELKEY: default_model
    networks:
      - infer_network

  infer_service:
    build:
      context: .
      dockerfile: Dockerfile.infer
    depends_on:
      - redis_service
      - model_service
    container_name: infer_service
    ports:
      - "5001:5001"
    environment:
      #MODELURL: http://model_service:5002/model
      MSHOST: model_service
      MSPORT: 5002
      MSENDPOINT: /model
    networks:
      - infer_network

  model_upload:
    image: curlimages/curl:latest
    depends_on:
      - redis_service
      - model_service
    volumes:
      - ./model:/model
    command: -X POST -F "modelfile=@/model/modelfile1" -F "model_key=new_model" http://model_service:5002/model
    networks:
      - infer_network
    
networks:
  infer_network:
    driver: bridge